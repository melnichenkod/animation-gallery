body,
html {
    font: 16px/1.4 Georgia, serif;
}
.page {
    min-width: 1000px;
    padding: 2.5rem 2rem;
}
.title {
    font-size: 3rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    text-align: center;
    margin-bottom: 0.4em;
}
.gallery {
    &Item {
        display: inline-block;
        width: 25%;
        padding-bottom: 29%;
        height: 0;
        position: relative;
        vertical-align: top;
    }
}
.card {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;

    color: white;
    &:hover,
    &:visited {
        color: white;
    }

    &Content,
    &Hover,
    &Image {
        position: absolute
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
    }
    &Image {
        object-fit: cover;
        z-index: 1;
    }
    &Hover {
        z-index: 2;
        background: rgba(0, 0, 0, 0.7);
        // transition: all 0.3s;
    }
    &Content {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        z-index: 3;

    }
}

